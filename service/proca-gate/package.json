{
    "name": "proca-gate",
    "description": "Proca action gateway for AWS Lambda",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@proca/cli": "2.3.0",
        "@sentry/node": "^6.3.5",
        "aws-sdk": "^2.815.0"
    },
    "devDependencies": {
        "@tsconfig/node12": "^1.0.7",
        "@types/aws-lambda": "^8.10.76",
        "@types/node": "^15.0.1",
        "jest": "^26.6.3",
        "typescript": "^4.2.4",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "test": "jest --roots __tests__/unit",
        "integ-test": "jest --roots __tests__/integration",

        "build": "node_modules/typescript/bin/tsc",
        "watch": "node_modules/typescript/bin/tsc -w --preserveWatchOutput",

        "prepare": "which sam > /dev/null || echo 'REQUIRED INSTALL: sudo pip3 install aws-sam-cli' && sam build"
    }
}
